# Whisper Docker Configuration
WHISPER_MODEL=base
WHISPER_THREADS=4
WHISPER_HOST=0.0.0.0
WHISPER_PORT=8080

# Available models: tiny, tiny.en, base, base.en, small, small.en, medium, medium.en
WHISPER_MODELS_TO_DOWNLOAD=tiny,base,small

# Resource limits
WHISPER_MEMORY_LIMIT=4G
WHISPER_CPU_LIMIT=2.0

# Redis configuration (for caching)
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json