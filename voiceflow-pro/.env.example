# Database
DATABASE_URL="postgresql://user:password@localhost:5432/voiceflow_dev"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# OpenAI
OPENAI_API_KEY="sk-..."

# Application
NODE_ENV="development"
PORT="3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# JWT
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="7d"

# File Upload
MAX_FILE_SIZE="2147483648" # 2GB in bytes
ALLOWED_FILE_TYPES="audio/mpeg,audio/wav,audio/mp4,audio/ogg,audio/opus,video/quicktime,video/mp4"

# Redis (for queues)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="debug"

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX="100"

# Storage
STORAGE_BUCKET_NAME="audio-files"

# Email (optional)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM=""