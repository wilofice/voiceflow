{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist/renderer",
    "noEmit": false
  },
  "include": [
    "src/renderer/**/*",
    "src/preload/**/*", 
    "src/shared/**/*"
  ],
  "exclude": [
    "src/main/**/*"
  ]
}