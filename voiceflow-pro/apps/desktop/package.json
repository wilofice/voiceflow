{
  "name": "@voiceflow-pro/desktop",
  "version": "1.0.0",
  "description": "VoiceFlowPro Desktop Application",
  "main": "dist/main/index.js",
  "author": "VoiceFlow Pro Team",
  "license": "MIT",
  "homepage": "https://voiceflowpro.com",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "build:watch": "npm run build:main -- --watch",
    "electron:dev": "wait-on dist/main/index.js && electron . --dev",
    "package": "electron-builder",
    "package:all": "electron-builder --publish=never",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.0.0",
    "@types/valid-url": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "@xenova/transformers": "^2.0.0",
    "chokidar": "^3.0.0",
    "electron-context-menu": "^3.0.0",
    "electron-log": "^5.0.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^6.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "mime-types": "^3.0.1",
    "node-downloader-helper": "^2.1.9",
    "uuid": "^13.0.0",
    "valid-url": "^1.0.9",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.voiceflow.pro.desktop",
    "productName": "VoiceFlow Pro",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": {
        "teamId": "TEAM_ID_HERE"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
